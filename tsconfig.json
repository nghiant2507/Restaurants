{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/module/*": [
        "./app/(FE)/*"
      ],
      "~/components/*": [
        "./app/_components/*"
      ],
      "~/core/*": [
        "./app/_core/*"
      ],
      "~/lib/*": [
        "./app/_core/lib/*"
      ],
      "@/be/lib/*": [
        "./app/(BE)/_lib/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
